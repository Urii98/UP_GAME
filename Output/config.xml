<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="2"/> <!--para que el scale funcione, tenemos que tener en cuenta que no solo lo que se renderiza tiene que verse modificado, sino también todo lo relacionado con las fisicas (posición del collider), velocidad de personajes, etc.-->
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128"/>
  </audio>

  <!-- L02: DONE: Add an element for the entity manager and add the player parameters -->
  <scene>
    <player x="30" y="20" scalarSpeedX="6" scalarSpeedY="9" scalarSpeedYDown="6" 
            texturepath="Assets/Textures/KirbySS.png" coinFxPath="Assets/Audio/Fx/coin.ogg" kirbyDeathFxPath="Assets/Audio/Fx/KirbyDeathFx.ogg"
            flapLimit="0" oneJump="false" flying="false" godMode="false"/>
    <item x="256" y="515" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="416" y="512" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="354" y="352" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="200" y="672" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="500" y="672" texturepath="Assets/Textures/goldCoin.png"/>
    <SmallEnemy1 x="350" y="672" scalarLimites="30" speedX="2"
                 walkDir="false" attackE="false" animAtk="false" destroy="false"
                 texturepath="Assets/Textures/Enemies.png"/>
    <SmallEnemy1 x="440" y="332" scalarLimites="30" speedX="2"
                 walkDir="false" attackE="false" animAtk="false" destroy="false"
                 texturepath="Assets/Textures/Enemies.png"/>
    <SmallEnemy1 x="330" y="497" scalarLimites="30" speedX="2"
                 walkDir="false" attackE="false" animAtk="false" destroy="false"
                 texturepath="Assets/Textures/Enemies.png"/>
  </scene>
  
  <sceneLogo>
    <textureLogoPath path="Assets/Textures/Logo.png"/>
  </sceneLogo>

  <sceneTitle>
    <textureTitlePath path="Assets/Textures/Title/ezgif-frame-"/>
    <musicTitlePath path="Assets/Audio/Music/MusicSceneTitle.ogg"/>
    <musicStopPath path="Assets/Audio/Music/noSound.ogg"/>
  </sceneTitle>

  <sceneEnding>
    <textureSceneEndingPath path="Assets/Textures/kirbyDeath.png"/>
  </sceneEnding>

  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/UP_GAME.tmx"/>
    <middleBackgroundTexture path="Assets/Textures/back.png"/>
    <farBackgroundTexture path="Assets/Textures/middle.png"/>
  </map>
  
</config>
